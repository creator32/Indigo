@RenderFooterScripts()

@helper RenderStyles()
{
    <link href="~/Content/css/reset.css" rel="stylesheet" />
    <link href="~/areas/admin/content/frameworks/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/areas/admin/content/frameworks/bootstrap/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/areas/admin/content/css/base.css" rel="stylesheet" />
    @RenderSection("Styles", false)
}

@helper RenderHeaderScripts()
{
    @RenderSection("HeaderScripts", false)
}

@helper RenderFooterScripts()
{
    <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="~/areas/admin/content/frameworks/bootstrap/js/bootstrap.min.js"></script>
    @RenderSection("FooterScripts", false)
}

</html>
